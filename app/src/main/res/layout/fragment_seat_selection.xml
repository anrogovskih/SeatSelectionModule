<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    tools:context=".SeatSelectionFragment">


    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.seatselectionmodule.SeatView
            android:layout_width="@dimen/seat_view_size"
            android:layout_height="@dimen/seat_view_size"
            android:layout_marginEnd="@dimen/seat_view_margin"
            android:background="@drawable/selector_seat_view_background"
            app:imageResource="@drawable/ic_seat_adult"/>

        <com.example.seatselectionmodule.SeatView
            android:layout_width="@dimen/seat_view_size"
            android:layout_height="@dimen/seat_view_size"
            android:layout_marginEnd="@dimen/seat_view_margin"
            android:background="@drawable/selector_seat_view_background"
            app:imageResource="@drawable/ic_seat_adult_with_infant"/>

        <com.example.seatselectionmodule.SeatView
            android:layout_width="@dimen/seat_view_size"
            android:layout_height="@dimen/seat_view_size"
            android:layout_marginEnd="@dimen/seat_view_margin"
            android:background="@drawable/selector_seat_view_background"
            app:imageResource="@drawable/ic_seat_child"/>

        <com.example.seatselectionmodule.SeatView
            android:layout_width="@dimen/seat_view_size"
            android:layout_height="@dimen/seat_view_size"
            android:layout_marginEnd="@dimen/seat_view_margin"
            android:background="@drawable/selector_seat_view_background"
            app:state_required_payment_type_1="true"/>


        <com.example.seatselectionmodule.SeatView
            android:layout_width="@dimen/seat_view_size"
            android:layout_height="@dimen/seat_view_size"
            android:layout_marginEnd="@dimen/seat_view_margin"
            android:background="@drawable/selector_seat_view_background"
            app:state_required_payment_type_2="true"/>

        <com.example.seatselectionmodule.SeatView
            android:layout_width="@dimen/seat_view_size"
            android:layout_height="@dimen/seat_view_size"
            android:layout_marginEnd="@dimen/seat_view_margin"
            android:background="@drawable/selector_seat_view_background" />
    </LinearLayout>


</android.support.v7.widget.CardView>