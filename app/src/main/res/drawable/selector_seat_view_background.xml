<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item app:state_required_payment_type_1="true">
        <color android:color="@color/colorSeatLightBlue"/>
    </item>

    <item app:state_required_payment_type_2="true">
        <color android:color="@color/colorSeatDarkBlue"/>
    </item>

    <item android:state_selected="true">
        <color android:color="@color/colorAccent"/>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:color="@color/colorAccent"
                android:width="1dp"/>
        </shape>
    </item>

</selector>